<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
  
  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>  <!-- Tailwind CSS CDN link -->
</head>
<body class="bg-gray-100 font-sans">

  <!-- Container -->
  <div class="max-w-4xl mx-auto p-8 bg-white shadow-lg rounded-lg mt-10">

    <!-- Heading -->
    <h1 class="text-3xl font-bold text-center mb-6">User List</h1>

    <!-- Add User Form -->
    <form action="/add" method="POST" class="space-y-4 mb-6">
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
        <input type="text" name="name" id="name" placeholder="Name" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
      </div>

      <div>
        <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
        <input type="email" name="email" id="email" placeholder="Email" required class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
      </div>

      <div class="text-center">
        <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md shadow-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Add User</button>
      </div>
    </form>

    <!-- User List -->
    <ul class="space-y-4">
      <% users.forEach(user => { %>
        <li class="flex justify-between items-center p-4 bg-gray-50 rounded-lg shadow-sm">
          <div class="text-lg font-medium text-gray-700">
            <%= user.name %> - <%= user.email %>
          </div>
          <div class="space-x-4">
            <a href="/edit/<%= user.id %>" class="text-blue-500 hover:text-blue-700">Edit</a>
            <a href="/delete/<%= user.id %>" class="text-red-500 hover:text-red-700">Delete</a>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>

</body>
</html>
